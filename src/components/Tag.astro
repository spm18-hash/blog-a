---
import { formatTag } from "../lib/utils.ts";
import Link from "./Link.astro";
import { cn } from "../lib/utils.ts";

type Props = {
    classes?: string;
    href: string;
    tag: string;
};

const { tag, href, classes } = Astro.props;
---

<Link
    href={href}
    className={cn(
        "capitalize font-semibold text-xs text-neutral-900 px-2 py-0.5 rounded-full border-2 border-neutral-900",
        classes,
    )}
>
    {formatTag(tag)}
</Link>
