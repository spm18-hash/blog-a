---
import type { HTMLAttributes } from "astro/types";
import { cn } from "../lib/utils";
type Props = HTMLAttributes<"a"> & {
    className?: string;
};

const { href, className, ...props } = Astro.props;
---

<a
    {...props}
    href={String(href)}
    class={cn(
        "inline-flex items-center gap-1 [&_svg]:h-4 [&_svg]:w-4",
        className,
    )}><slot /></a
>
